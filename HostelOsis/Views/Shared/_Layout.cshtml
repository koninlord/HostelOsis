
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewData["Title"] - HostelOsis</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Dashboard/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/Dashboard/css/simple-sidebar.css" rel="stylesheet">

</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light text-Black border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">
                <i class="fas fa-bars mr-1"></i> Hostel Admin
            </div>
            <div class="list-group list-group-flush">
                <a href="@Url.Action("Index","Occupants")" class="list-group-item list-group-item-action bg-light">Occupants</a>
                <a href="@Url.Action("Index","Rooms")" class="list-group-item list-group-item-action bg-light">Room</a>
                <a href="@Url.Action("Index","RoomTypes")" class="list-group-item list-group-item-action bg-light">Room Type</a>
                <a href="@Url.Action("Index","Floors")" class="list-group-item list-group-item-action bg-light">Floor</a>

                <a href="@Url.Action("Index","Bookings")" class="list-group-item list-group-item-action bg-light">Booking</a>
                <a href="@Url.Action("Index","Report")" class="list-group-item list-group-item-action bg-light">report</a>

            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light text-white border-bottom">
                <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item dropdown ">

                            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                                <partial name="_LoginPartial" />
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/Dashboard/vendor/jquery/jquery.min.js"></script>
    <script src="~/Dashboard/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    @RenderSection("Scripts", required: false)

</body>

</html>
